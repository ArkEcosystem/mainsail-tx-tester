{
    "private": true,
    "name": "@mainsail/simple-tx-tester",
    "type": "module",
    "description": "A simple command line utility to create and broadcast transactions.",
    "scripts": {
        "start": "node dist/index.js",
        "message-sign": "node dist/actions/message-sign.js",
        "message-verify": "node dist/actions/message-verify.js",
        "wallet": "node dist/actions/wallet-data.js",
        "validator": "node dist/actions/validator-data.js",
        "fixtures": "node dist/actions/generate-fixtures.js",
        "get-nonce": "node dist/actions/get-nonce.js",
        "build": "del dist && tsc",
        "build:watch": "del dist && tsc -w",
        "debug": "node --inspect-brk dist/index.js",
        "clean": "del dist",
        "compile": "./node_modules/typescript/bin/tsc"
    },
    "dependencies": {
        "@mainsail/container": "link:../mainsail/packages/container",
        "@mainsail/contracts": "link:../mainsail/packages/contracts",
        "@mainsail/core": "link:../mainsail/packages/core",
        "@mainsail/crypto-address-keccak256": "link:../mainsail/packages/crypto-address-keccak256",
        "@mainsail/crypto-config": "link:../mainsail/packages/crypto-config",
        "@mainsail/crypto-consensus-bls12-381": "link:../mainsail/packages/crypto-consensus-bls12-381",
        "@mainsail/crypto-hash-bcrypto": "link:../mainsail/packages/crypto-hash-bcrypto",
        "@mainsail/crypto-key-pair-ecdsa": "link:../mainsail/packages/crypto-key-pair-ecdsa",
        "@mainsail/crypto-signature-ecdsa": "link:../mainsail/packages/crypto-signature-ecdsa",
        "@mainsail/crypto-transaction": "link:../mainsail/packages/crypto-transaction",
        "@mainsail/crypto-transaction-evm-call": "link:../mainsail/packages/crypto-transaction-evm-call",
        "@mainsail/crypto-validation": "link:../mainsail/packages/crypto-validation",
        "@mainsail/crypto-wif": "link:../mainsail/packages/crypto-wif",
        "@mainsail/evm-contracts": "link:../mainsail/packages/evm-contracts",
        "@mainsail/kernel": "link:../mainsail/packages/kernel",
        "@mainsail/serializer": "link:../mainsail/packages/serializer",
        "@mainsail/transactions": "link:../mainsail/packages/transactions",
        "@mainsail/utils": "link:../mainsail/packages/utils",
        "@mainsail/validation": "link:../mainsail/packages/validation",
        "bip39": "3.1.0",
        "fs-extra": "^9.0.1",
        "mainsail-network-config": "https://github.com/ArkEcosystem/mainsail-network-config#evm",
        "reflect-metadata": "^0.1.13",
        "viem": "^2.16.3"
    },
    "devDependencies": {
        "@types/eslint": "^8.44.9",
        "@types/eslint-config-prettier": "^6.11.3",
        "@types/eslint-plugin-prettier": "^3.1.3",
        "del-cli": "^5.1.0",
        "depcheck": "^1.4.7",
        "eslint": "^8.55.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.0.1",
        "eslint-plugin-simple-import-sort": "^10.0.0",
        "prettier": "^3.1.1",
        "typescript": "5.4.2"
    },
    "engines": {
        "node": ">=20.x"
    },
    "pnpm": {
        "onlyBuiltDependencies": [
            "@chainsafe/blst",
            "bcrypto",
            "better-sqlite3",
            "bstring",
            "lmdb",
            "msgpackr-extract",
            "nsfw",
            "protobufjs"
        ]
    }
}
